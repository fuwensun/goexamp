FROM ubuntu:18.04       
LABEL maintainer="sfuwen@sina.com"
RUN apt-get update -y
RUN groupadd -r goms && useradd -r -g goms goms
USER goms
WORKDIR /home/goms
COPY ./build/eRedis ./              
COPY ./configs ./configs
RUN ["ls","-l","./eRedis","./configs/"]     
EXPOSE 8080/tcp
EXPOSE 50051/tcp       
CMD ["./eRedis","-cfgpath=./configs"]

