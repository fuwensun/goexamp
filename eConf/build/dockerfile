FROM ubuntu:18.04       
LABEL maintainer="sfuwen@sina.com"
RUN apt-get update -y
RUN groupadd -r goms && useradd -r -g goms goms
USER goms
WORKDIR /home/goms
COPY ./build/eConf ./              
COPY ./configs ./configs
RUN ["ls","-l","./eConf","./configs/"]
EXPOSE 8080/tcp
EXPOSE 50051/tcp          
CMD ["./eConf","-cfgpath=./configs"]

